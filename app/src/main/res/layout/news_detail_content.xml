<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtTitle"
        style="@style/NewsDetailTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtDescription"
        style="@style/NewsDetailDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        tools:text="Description" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtAuthor"
        style="@style/NewsDetailAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDescription"
        tools:text="Author" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtPublishedAt"
        style="@style/NewsDetailPublishedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/txtAuthor"
        app:layout_constraintTop_toBottomOf="@+id/txtAuthor"
        tools:text="PublishedAt" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtPublishedAt"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtContent"
            style="@style/NewsDetailContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:visibility="visible"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer ut semper enim. Praesent id tincidunt lectus, ac venenatis orci. Maecenas egestas varius ligula, quis ornare lorem porttitor sit amet. Ut feugiat suscipit dui, et dignissim nisl pulvinar a. In pulvinar tortor sit amet placerat eleifend. Duis lobortis dapibus suscipit. Vestibulum felis magna, lobortis non risus fermentum, sollicitudin condimentum odio. Donec dictum odio in lectus pellentesque dignissim. Phasellus tristique consequat justo, eu pharetra risus vestibulum id." />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>